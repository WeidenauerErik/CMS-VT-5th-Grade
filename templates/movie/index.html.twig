<!DOCTYPE html>

<title>Movie index</title>

{% block body %}
    <h1>Movie index</h1>

    <!-- Searchbar -->
    <form method="get" action="{{ path('app_movie_index') }}">
        <input type="text" name="search" placeholder="Search by name" value="{{ search }}">
        <button type="submit">Search</button>
        <a href="{{ path('app_movie_index') }}">Clear</a>
    </form>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Year</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.name }}</td>
                <td>{{ movie.year }}</td>
                <td>
                    <a href="{{ path('app_movie_show', {'id': movie.id}) }}">show</a>
                    <a href="{{ path('app_movie_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_movie_new') }}">Create new</a>
{% endblock %}
